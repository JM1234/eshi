<p id="notice"><%= notice %></p>

<h1>Listing Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Pets</th>
      <th>Duration</th>
      <th>Unit no</th>
      <th>Property type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.price %></td>
        <td><%= apartment.bedrooms %></td>
        <td><%= apartment.bathrooms %></td>
        <td><%= apartment.pets %></td>
        <td><%= apartment.duration %></td>
        <td><%= apartment.unit_no %></td>
        <td><%= apartment.property_type %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

